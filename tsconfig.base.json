{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020", // changed from es2015 to esnext, to support module import
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@modules/*": [
        "src/app/_modules/*"
      ],
      "@services/*": [
        "src/app/_services/*"
      ],
      "@models/*": [
        "src/app/_models/*"
      ],
      "@shared/*": [
        "src/app/_modules/shared/*"
      ]
      
    }
  }
}